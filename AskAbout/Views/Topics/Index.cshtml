@model IEnumerable<AskAbout.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionsCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RepliesCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TopicRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersCount)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepliesCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsersCount)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Name">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
