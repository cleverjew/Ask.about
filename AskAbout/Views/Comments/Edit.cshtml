@inject IViewLocalizer Localizer

@model EditCommentViewModel

@{
    ViewData["Title"] = Localizer["Title"];
}

<h2>@Localizer["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Comment.Id" />
        <input type="hidden" asp-for="Comment.Attachment" />
        <input type="hidden" asp-for="qid" />
        <div class="form-group">
            <label class="col-md-2 control-label">@Localizer["Text"]</label>
            <div class="col-md-10">
                <input asp-for="Comment.Text" class="form-control" />
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">@Localizer["Attachment"]</label>
            <div class="col-md-10">
                <input type="file" name="file" accept="image/jpeg,image/png,image/gif" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.Comment.Reply.Question.Id">@Localizer["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
